@{
    ViewData["Title"] = "Update Customer";
}

<script src="~/js/jquery-3.5.1.min.js"></script>
<div class="container">

    <div class="bold font-raleway wow fadeInUp animated">
        <h2 class="fs-55 fw-400 text-center">PROFILE SETTINGS</h2>
    </div>

</div>

<script>
    
</script>

<form action="" onsubmit="return UpdateCustomer();" id="customerForm">
    <div id="quote_form" class="container">
        <div class="row">
            <div id="typeChoice" class="col-md-12 form-group">

                <script>
                    let customer = JSON.parse('@Html.Raw(Json.Serialize(ViewBag.customer))');
                </script>

                <label for="company_name">Company Name</label>
                <input required type="text" value="@ViewBag.customer.company_name" class="form-control" name="company_name" id="company_name">
                <br />

                <label for="full_name_of_company_contact">Company's Contact Name</label>
                <input required type="text" value="@ViewBag.customer.full_name_of_company_contact" class="form-control" name="full_name_of_company_contact" id="full_name_of_company_contact">
                <br />

                <label for="company_contact_phone">Company's Contact Phone</label>
                <input required type="text" value="@ViewBag.customer.company_contact_phone" class="form-control" name="company_contact_phone" id="company_contact_phone">
                <br />

                <label for="email_of_company_contact">Company's Contact Email</label>
                <input required type="text" value="@ViewBag.customer.email_of_company_contact" class="form-control" name="email_of_company_contact" id="email_of_company_contact">
                <br />

                <label for="company_description">Company's Description</label>
                <input required type="text" value="@ViewBag.customer.company_description" class="form-control" name="company_description" id="company_description">
                <br />

                <label for="full_name_of_service_technical_authority">Support Contact Name</label>
                <input required type="text" value="@ViewBag.customer.full_name_of_service_technical_authority" class="form-control" name="full_name_of_service_technical_authority" id="full_name_of_service_technical_authority">
                <br />

                <label for="technical_authority_phone_for_service_">Support Contact Phone</label>
                <input required type="text" value="@ViewBag.customer.technical_authority_phone_for_service_" class="form-control" name="technical_authority_phone_for_service_" id="technical_authority_phone_for_service_">
                <br />



                <label for="technical_manager_email_for_service">Support Contact Email</label>
                <input required type="text" value="@ViewBag.customer.technical_manager_email_for_service" class="form-control" name="technical_manager_email_for_service" id="technical_manager_email_for_service">
                <br />


                <div class="row">
                    <!--submit-->
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary" id="btnProfile"><i class="fa fa-check"></i> SUBMIT MODIFICATIONS </button>
                        <br /><br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>